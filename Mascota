#include <iostream>
#include <string>
using namespace std;

class Mascota { // Declare la clase "Mascota".
private:
    string nombre; // Agregamos atributos unicos de la clase:
    int energia;
    int hambre;
    int felicidad;

public:
    // Es un constructor para inicializar los valores de la mascota.
    Mascota(string _nombre) {
        nombre = _nombre;
        energia = 10;
        hambre = 8;
        felicidad = 9;
    }

    void comer() {     // Método que simula que la mascota come.
        cout << nombre << " Esta comiendo..." << endl;
        hambre += 2;
        energia += 1;
        if (hambre > 10) hambre = 10;
        if (energia > 10) energia = 10;
    }

    void jugar() {    // Método que simula que la mascota juega.
        cout << nombre << " Esta jugando..." << endl;
        felicidad += 2;
        energia -= 1;
        hambre -= 2;
        if (felicidad > 10) felicidad = 10;
        if (energia < 0) energia = 0;
        if (hambre < 0) hambre = 0;
    }

    void dormir() {    // Método que simula que la mascota juega.
        cout << nombre << " Esta durmiendo..." << endl;
        energia += 3;
        hambre -= 1;
        if (energia > 10) energia = 10;
        if (hambre < 0) hambre = 0;
    }

    void mostrar_estado() const {  // Método para mostrar el estado actual de la mascota.
        cout << "--- Estado de " << nombre << " ---" << endl;
        cout << "Energia: " << energia << "/10" << endl;
        if (energia < 4)
            cout << "Me quiero hechar un cuaje" << endl;
        cout << "Hambre: " << hambre << "/10" << endl;
        if(hambre <4) 
        cout << "Tener Hambre dame de comer" << endl;
        cout << "Felicidad: " << felicidad << "/10" << endl;
        cout << "ESTA MAMADISIMO" << endl;
    }
};

int main() {
    string nombreMascota; // Variable para almacenar el nombre de la mascota.
    cout << "Ingresa el nombre de tu mascota: ";
    getline(cin, nombreMascota);
    cout << "______________________$$$$$$$$" << endl;
    cout << "_______________$$$$$$$________$$$$$$$$$" << endl;
    cout << "_____________$$________________________$$$$" << endl;
    cout << "____________$$_____________________________$$" << endl;
    cout << "___________$__________________________________$$" << endl;
    cout << "__________$$__$$______________________$$_________$$" << endl;
    cout << "________$$__$$___$$$$_________$$$$____$$__________$$$$" << endl;
    cout << "______$$___$$__$$$$__$$_____$$$$__$$_$$_____________$$$" << endl;
    cout << "______$$___$$____$$$$_________$$$$___$$_______________$$" << endl;
    cout << "______$$___$$________________________$$_______________$$" << endl;
    cout << "______$$____$$_______________________$$_____________$$" << endl;
    cout << "________$$__$$____$$$$$$_____________$$___________$$$" << endl;
    cout << "________$$__$$__$$______$$___________$$_________$$" << endl;
    cout << "________$$__$$__$$______$$___________$$_______$$" << endl;
    cout << "__________$$$$____$$$$$$_____________$$$$____$$$$" << endl;
    cout << "__________$$$$_____________________$$__$$____$$$" << endl;
    cout << "___________$$_$$$$$$$$$$$$_____$$$$______$$$$_$$" << endl;
    cout << "_____________$$___$$______$$$$$_______________$$" << endl;
    cout << "_____________$$_____$$$$$$$____________________$$" << endl;
    cout << "_____________$$________________________________$$" << endl;
    cout << "____________$$_________________________________$$" << endl;

    Mascota miMascota(nombreMascota);

    int opcion; //Variable para almacenar la opción seleccionada por el usuario.
    do {
        cout << "Que quieres hacer con " << nombreMascota << "?" << endl; // Menú interactivo.
        cout << "1. Comer" << endl;
        cout << "2. Jugar" << endl;
        cout << "3. Dormir" << endl;
        cout << "4. Mostrar Estado" << endl;
        cout << "5. Limpiar Ventana" << endl;
        cout << "6. Salir" << endl;
        cout << "Selecciona una opcion: ";
        cin >> opcion; // Captura la opción seleccionada.

        switch (opcion) {// Realiza acciones dependiendo de la opción seleccionada.
            // Aqui llama al metodo que desea.
        case 1:
            miMascota.comer();
            break;
        case 2:
            miMascota.jugar();
            break;
        case 3:
            miMascota.dormir();
            break;
        case 4:
            miMascota.mostrar_estado();
            break;
        case 5:
              cout << "\033[2J\033[1;1H";
              break;
        case 6:
            cout << "¡Hasta luego!" << endl;
            break;
        default:
            cout << "Opción no válida. Intenta de nuevo." << endl;

        }
        
    } while (opcion != 6);

    return 0;
}
